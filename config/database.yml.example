# SQLite version 3.x
#   gem install sqlite3
#
#   Ensure the SQLite 3 gem is defined in your Gemfile
#   gem 'sqlite3'
#

development:
  adapter: mysql2
  database: %NAME%
  timeout: 5000
  encoding: utf8
  username: %USERNAME%
  password: %PASSWORD%
  host: %HOST%
  port: %PORT%

production:
  adapter: mysql2
  database: %NAME%
  timeout: 5000
  encoding: utf8
  username: %USERNAME%
  password: %PASSWORD%
  host: %HOST%
  port: %PORT%

test:
  adapter: sqlite3
  database: db/test.sqlite3
  pool: 5
  timeout: 5000
