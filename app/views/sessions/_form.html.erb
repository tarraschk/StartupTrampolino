<div class="navform">
  <%= form_for(:session, url: sessions_path) do |f| %>

  <%= f.label :email, "Email" %>
  <%= f.text_field :email %>

  <%= f.label :password, "Mot de passe" %>
  <%= f.password_field :password %>

  <%= f.submit "Se connecter", class: "btn btn-large btn-primary" %>
  <% end %>
</div>
